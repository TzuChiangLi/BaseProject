<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_blue"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/handover_rv_item_tv_usercode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/handover_usercode"
            android:textColor="@color/common_white" />

        <TextView
            android:id="@+id/handover_rv_item_tv_usercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/handover_rv_item_tv_usercode_title"
            android:textColor="@color/common_white" />

        <TextView
            android:id="@+id/handover_rv_item_tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/handover_rv_item_tv_user"
            android:text="@string/handover_username"
            android:textColor="@color/common_white" />

        <TextView
            android:id="@+id/handover_rv_item_tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_white" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/common_gray_bg"
        android:padding="16dp">

        <com.bin.david.form.core.SmartTable
            android:id="@+id/handover_rv_item_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/handover_rv_item_tv_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/handover_rv_item_table"
            android:layout_alignParentStart="true"
            android:text="@string/handover_count"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/handover_rv_item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/handover_rv_item_table"
            android:layout_toEndOf="@+id/handover_rv_item_tv_count_title"
            android:textColor="@color/text_black_first" />


        <TextView
            android:id="@+id/handover_rv_item_tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/handover_rv_item_table"
            android:layout_toStartOf="@+id/handover_rv_item_tv_time"
            android:text="@string/handover_time"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/handover_rv_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/handover_rv_item_table"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_black_first" />

    </RelativeLayout>


</LinearLayout>