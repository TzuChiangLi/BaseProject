<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_2"
    android:layout_marginEnd="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_6"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_0">

    <RelativeLayout
        android:id="@+id/rtn_list_rv_product_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_8">


        <LinearLayout
            android:id="@+id/rtn_list_rv_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rtn_list_rv_product_tv_prodcode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:text="@string/shop_rv_title_sn"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rtn_list_rv_product_tv_prodcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14"
                tools:text="@string/shop_tv_prod_replace" />

            <TextView
                android:id="@+id/rtn_list_rv_product_tv_barcode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:text="@string/shop_rv_title_sn_line"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/rtn_list_rv_product_tv_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14"
                tools:text="@string/shop_tv_bar_replace" />
        </LinearLayout>


        <TextView
            android:id="@+id/rtn_list_rv_product_tv_prodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_list_rv_ll"
            android:layout_alignStart="@+id/rtn_list_rv_ll"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toStartOf="@+id/rtn_list_rv_product_tv_num"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp_250"
            android:textColor="@color/text_black_first"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="@string/shop_edt_search" />


        <TextView
            android:id="@+id/rtn_list_rv_product_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rtn_list_rv_product_tv_prodname"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_toStartOf="@+id/rtn_list_rv_product_tv_num_unit"
            android:textColor="@color/text_black_first"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="50" />


        <!--<ImageButton-->
        <!--android:id="@+id/rtn_list_rv_img_add"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignTop="@+id/rtn_list_rv_product_tv_num_title"-->
        <!--android:layout_alignBottom="@+id/rtn_list_rv_product_tv_prodname"-->
        <!--android:layout_toStartOf="@+id/rtn_list_rv_product_tv_num_unit"-->
        <!--android:background="@null"-->
        <!--android:paddingStart="2dp"-->
        <!--android:paddingEnd="2dp"-->
        <!--android:scaleX="1.2"-->
        <!--android:visibility="gone"-->
        <!--android:scaleY="1.2"-->
        <!--android:src="@drawable/add" />-->

        <TextView
            android:id="@+id/rtn_list_rv_product_tv_num_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rtn_list_rv_product_tv_num"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:textColor="@color/text_black_first"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="件" />

        <RelativeLayout
            android:id="@+id/rtn_list_rv_rl_ls_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_list_rv_product_tv_prodname"
            android:layout_alignStart="@+id/rtn_list_rv_product_tv_prodname"
            android:layout_alignEnd="@+id/rtn_list_rv_product_tv_num_unit"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_16">

            <TextView
                android:id="@+id/rtn_list_rv_ls_tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/shop_tv_per_price"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rtn_list_rv_ls_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rtn_list_rv_ls_tv_price_title"
                android:textColor="@color/text_black_first"
                tools:text="@string/shop_tv_num_replace" />

            <LinearLayout
                android:id="@+id/rtn_list_rv_ls_ll_dsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/rtn_list_rv_ls_tv_total_title"
                android:layout_toEndOf="@+id/rtn_list_rv_ls_tv_price"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rtn_list_rv_ls_tv_discount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_tv_discount"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/rtn_list_rv_ls_tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:textColor="@color/text_black_first"
                    tools:text="@string/shop_tv_num_replace" />
            </LinearLayout>


            <TextView
                android:id="@+id/rtn_list_rv_ls_tv_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/rtn_list_rv_ls_tv_total"
                android:text="@string/shop_tv_sub_total"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rtn_list_rv_ls_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black_first"
                tools:text="@string/shop_tv_num_replace" />
        </RelativeLayout>

        <View
            android:id="@+id/rtn_list_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rtn_list_rv_rl_ls_info"
            android:background="@color/divide_line" />

        <RelativeLayout
            android:id="@+id/rtn_list_rv_rl_rtn_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_list_line"
            android:layout_alignStart="@+id/rtn_list_rv_product_tv_prodname"
            android:layout_alignEnd="@+id/rtn_list_rv_product_tv_num_unit"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_16">

            <TextView
                android:id="@+id/rtn_list_rv_rtn_tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/shop_tv_per_price"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rtn_list_rv_rtn_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rtn_list_rv_rtn_tv_price_title"
                android:textColor="@color/text_black_first"
                tools:text="@string/shop_tv_num_replace" />

            <LinearLayout
                android:id="@+id/rtn_list_rv_rtn_ll_dsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rtn_list_rv_rtn_tv_discount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_tv_amount"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/rtn_list_rv_rtn_tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:textColor="@color/text_black_first"
                    tools:text="@string/shop_tv_num_replace" />

                <TextView
                    android:id="@+id/rtn_list_rv_rtn_tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    tools:text="件" />
            </LinearLayout>


            <TextView
                android:id="@+id/rtn_list_rv_rtn_tv_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/rtn_list_rv_rtn_tv_total"
                android:text="@string/shop_tv_sub_total"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rtn_list_rv_rtn_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_black_first"
                tools:text="@string/shop_tv_num_replace" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rtn_list_rv_ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_list_rv_rl_rtn_info"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_4"
            android:visibility="visible">

            <TextView
                android:id="@+id/rtn_list_rv_btn_change_price"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_toStartOf="@+id/rtn_list_rv_img_minus"
                android:background="@drawable/shop_btn_blue_selector"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/shop_btn_price"
                android:textColor="@color/common_white" />

            <TextView
                android:id="@+id/rtn_list_rv_img_minus"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_toStartOf="@+id/rtn_list_rv_img_add"
                android:background="@drawable/shop_btn_blue_selector"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="-"
                android:textColor="@color/common_white" />

            <TextView
                android:id="@+id/rtn_list_rv_img_add"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_4"
                android:background="@drawable/shop_btn_blue_selector"
                android:gravity="center"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="+"
                android:textColor="@color/common_white" />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>

