<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShopListActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/shop_list_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:rightColor="@color/black"
        app:rightTitle="@string/app_online_status"
        app:title="@string/shop_title_bar_list" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shop_list_rl_bottom"
        android:layout_below="@+id/shop_list_top_bar"
        tools:listitem="@layout/shop_list_rv_product_item" />


    <RelativeLayout
        android:id="@+id/shop_list_rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/shop_list_tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:padding="12dp"
            android:text="@string/shop_tv_total" />

        <TextView
            android:id="@+id/shop_list_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/shop_list_tv_total_title"
            android:maxHeight="40dp"
            android:padding="12dp"
            android:text="9999.99" />


        <Button
            android:id="@+id/shop_list_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shop_list_btn_hang_up"
            android:layout_alignStart="@+id/shop_list_btn_hang_up"
            android:maxHeight="40dp"
            android:text="@string/shop_tv_cancel" />

        <Button
            android:id="@+id/shop_list_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shop_list_btn_pay"
            android:layout_alignParentEnd="true"
            android:maxHeight="40dp"
            android:text="@string/shop_tv_add" />


        <Button
            android:id="@+id/shop_list_btn_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_list_tv_total_title"
            android:layout_alignParentStart="true"
            android:maxHeight="40dp"
            android:text="@string/shop_tv_vip" />

        <Button
            android:id="@+id/shop_list_btn_whole_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shop_list_btn_vip"
            android:layout_toEndOf="@+id/shop_list_btn_vip"
            android:maxHeight="40dp"
            android:text="@string/shop_tv_whole_discount" />

        <Button
            android:id="@+id/shop_list_btn_hang_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shop_list_btn_vip"
            android:layout_toStartOf="@+id/shop_list_btn_pay"
            android:maxHeight="40dp"
            android:text="@string/shop_btn_hang_up" />

        <Button
            android:id="@+id/shop_list_btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shop_list_btn_vip"
            android:layout_alignParentEnd="true"
            android:maxHeight="40dp"
            android:text="@string/shop_btn_pay" />

    </RelativeLayout>

</RelativeLayout>