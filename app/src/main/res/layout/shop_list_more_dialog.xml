<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:background="@drawable/vip_select_shape"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/more_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_8"
        android:text="@string/shop_tv_more_title"
        android:textColor="@color/text_black_first"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/more_tv_title"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/dp_8"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />


    <LinearLayout
        android:id="@+id/more_ll_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_tv_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/more_ll_btn_group_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/more_btn_vip_dsc"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/more_btn_shape"
                android:maxLines="1"
                android:text="@string/shop_tv_vip"
                android:textSize="@dimen/sp_13" />

            <Button
                android:id="@+id/more_btn_vip_whole_dsc"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/more_btn_shape"
                android:maxLines="1"
                android:text="@string/shop_tv_whole_dsc"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_ll_btn_group_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_ll_btn_group_first"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/more_btn_cancel"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/more_btn_shape"
                android:maxWidth="@dimen/dp_48"
                android:maxLines="1"
                android:text="@string/shop_tv_cancel"
                android:textSize="13sp" />

            <Button
                android:id="@+id/more_btn_hang_up"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/more_btn_shape"
                android:maxLines="1"
                android:text="@string/shop_btn_hang_up"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>