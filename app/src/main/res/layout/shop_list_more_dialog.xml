<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/vip_select_shape"
    android:padding="8dp">

    <TextView
        android:id="@+id/more_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="@string/shop_tv_more_title"
        android:textColor="@color/text_black_first"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/more_tv_title"
        android:layout_alignEnd="@+id/more_ll_btn_group_first"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />


    <LinearLayout
        android:id="@+id/more_ll_btn_group_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_tv_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/more_btn_vip_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/shop_tv_vip"
            android:textSize="13sp" />

        <Button
            android:id="@+id/more_btn_vip_whole_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/shop_tv_whole_dsc"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_ll_btn_group_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_ll_btn_group_first"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/more_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/shop_tv_cancel"
            android:textSize="13sp" />

        <Button
            android:id="@+id/more_btn_hang_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/shop_btn_hang_up"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>