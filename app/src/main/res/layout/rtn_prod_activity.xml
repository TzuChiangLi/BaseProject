<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RtnProdActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/rtn_prod_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:leftIcon="@drawable/back"
        app:lineColor="@color/common_blue"
        app:lineSize="1px"
        app:rightIcon="@drawable/online">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:text="@string/rtn_prod_title_order"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </com.hjq.bar.TitleBar>

    <ImageView
        android:id="@+id/rtn_prod_title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rtn_prod_top_bar"
        android:background="@color/common_white"
        android:scaleType="centerInside"
        android:src="@drawable/title_bar_bottom" />

    <Button
        android:id="@+id/rtn_prod_btn_no_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rtn_prod_title_line"
        android:layout_marginTop="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/rtn_prod_btn_not_order" />

    <com.ftrend.cleareditview.ClearEditText
        android:id="@+id/rtn_prod_edt_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rtn_prod_btn_no_order"
        android:layout_alignBottom="@+id/rtn_prod_btn_no_order"
        android:layout_toStartOf="@+id/rtn_prod_btn_search"
        android:layout_toEndOf="@+id/rtn_prod_btn_no_order"
        android:background="@null"
        android:hint="@string/rtn_prod_tv_search"
        android:inputType="text"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textSize="@dimen/sp_13" />

    <Button
        android:id="@+id/rtn_prod_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rtn_prod_edt_trade"
        android:layout_alignBottom="@+id/rtn_prod_edt_trade"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/rtn_prod_btn_search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rtn_prod_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rtn_prod_btn_search"
        tools:listitem="@layout/shop_list_rv_product_item" />

</RelativeLayout>