<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8">

    <TextView
        android:id="@+id/trade_qry_rv_item_lsno"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_weight="1.3"
        android:gravity="center"
        android:textColor="@color/text_black_first"
        android:textSize="@dimen/sp_14"
        tools:text="@string/trade_qry_replace_lsno" />

    <TextView
        android:id="@+id/trade_qry_rv_item_total"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_weight="0.7"
        android:gravity="center"
        android:textColor="@color/text_black_first"
        android:textSize="@dimen/sp_14"
        tools:text="@string/trade_qry_replace_total" />

    <TextView
        android:id="@+id/trade_qry_rv_item_trade_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_weight="1.6"
        android:gravity="center"
        android:textColor="@color/text_black_first"
        android:textSize="@dimen/sp_14"
        tools:text="@string/trade_qry_replace_trade_time" />

    <TextView
        android:id="@+id/trade_qry_rv_item_btn_enter"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/trade_qry_prod_tv_qry"
        android:textColor="@color/home_title_tv_blue" />
</LinearLayout>