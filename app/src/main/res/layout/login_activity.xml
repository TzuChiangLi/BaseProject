<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">


    <TextView
        android:id="@+id/login_title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="120dp"
        android:text="@string/login_title_top"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/login_ll_dep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title_top"
        android:layout_alignStart="@+id/login_title_top"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_title_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_title_dep"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/login_sp_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="45dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/login_ll_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ll_dep"
        android:layout_alignStart="@+id/login_ll_dep"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_title_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login_title_username"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/login_sp_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ll_username"
        android:layout_alignStart="@+id/login_ll_username"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/login_title_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title_password"
            android:textSize="18sp" />


        <com.ftrend.cleareditview.ClearEditText
            android:id="@+id/login_edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="45dp"
            android:maxLines="1"
            android:textSize="18sp" />


    </LinearLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="150dp"
        android:text="@string/login_btn" />

</RelativeLayout>