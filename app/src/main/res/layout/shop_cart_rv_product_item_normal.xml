<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_cart_rv_product_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/shop_cart_rv_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_rv_product_tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:text="@string/shop_rv_title_sn"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/shop_rv_product_tv_prodcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/shop_tv_prod_replace"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/shop_rv_product_tv_barcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:text="@string/shop_rv_title_sn_line"
            android:textColor="@color/text_black_second" />

        <TextView
            android:id="@+id/shop_rv_product_tv_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/shop_tv_bar_replace"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>


    <TextView
        android:id="@+id/shop_rv_product_tv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_cart_rv_ll"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp_8"
        android:layout_toStartOf="@+id/shop_rv_product_price"
        android:gravity="start"
        android:text="@string/shop_edt_search"
        android:textColor="@color/text_black_first"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/shop_rv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rv_product_tv_prodname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:text="@string/shop_tv_num_replace"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_rv_product_tv_num"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:autoSizeMaxTextSize="@dimen/sp_14"
        android:autoSizeTextType="uniform"
        android:background="@drawable/shop_tip_num"
        android:gravity="center"
        android:textColor="@color/shop_white_text"
        android:textSize="@dimen/sp_12"
        android:visibility="visible" />

</RelativeLayout>
