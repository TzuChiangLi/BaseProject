<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vip_dsc_tv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/text_black_first"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:id="@+id/vip_dsc_ll_prod_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_dsc_tv_prodname"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"

        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/vip_dsc_tv_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vip_dsc_tv_prodname"
            android:text="原价："
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_dsc_tv_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vip_dsc_tv_price_title"
            android:layout_toEndOf="@+id/vip_dsc_tv_price_title"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_dsc_tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vip_dsc_tv_prodname"
            android:text="优惠价："
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_dsc_tv_total"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vip_dsc_tv_price_title"
            android:layout_toEndOf="@+id/vip_dsc_tv_price_title"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


    <View
        android:id="@+id/vip_dsc_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/vip_dsc_ll_prod_info"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/vip_dsc_ll_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_dsc_line"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            android:id="@+id/vip_dsc_tv_rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣比例："
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />

        <com.ftrend.cleareditview.ClearEditText
            android:id="@+id/vip_dsc_edt_rate"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" />

        <TextView
            android:id="@+id/vip_dsc_tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_dsc_tv_rate_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vip_dsc_ll_dsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_dsc_ll_rate"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            android:id="@+id/vip_dsc_tv_dsc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠金额："
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />

        <com.ftrend.cleareditview.ClearEditText
            android:id="@+id/vip_dsc_edt_dsc"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" />

        <TextView
            android:id="@+id/vip_dsc_tv_dsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vip_dsc_tv_dsc_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_second"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</RelativeLayout>