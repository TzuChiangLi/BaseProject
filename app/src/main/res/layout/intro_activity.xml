<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    tools:context="com.ftrend.zgp.view.IntroActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/intro_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentTop="true"
        app:leftIcon="@drawable/back"
        app:lineColor="@color/common_blue"
        app:lineVisible="false" />

    <ScrollView
        android:id="@+id/intro_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/intro_top_bar"
        android:layout_marginBottom="@dimen/dp_50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24">

            <ImageView
                android:id="@+id/intro_logo"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_82"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_60"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@+id/intro_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intro_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:text="@string/intro_app_name"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intro_app_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                tools:text="@string/intro_app_version" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/intro_app_version"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/common_gray_bg" />

            <LinearLayout
                android:id="@+id/intro_ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_home_title"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="@string/intro_app_home_title" />

                <TextView
                    android:id="@+id/intro_tv_home"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_enter"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/intro_app_enter" />


            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/intro_ll_1"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/common_gray_bg" />

            <LinearLayout
                android:id="@+id/intro_ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_tel_title"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="@string/intro_app_tel_title" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_tel"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/intro_app_tel" />


            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/intro_ll_2"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/common_gray_bg" />

            <LinearLayout
                android:id="@+id/intro_ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_fax_title"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="@string/intro_app_fax_title" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_fax"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/intro_app_fax" />


            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/intro_ll_3"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/common_gray_bg" />

            <LinearLayout
                android:id="@+id/intro_ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_email_title"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="@string/intro_app_email_title" />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dp_8"
                    android:text="@string/intro_app_email"
                    android:textColor="@color/text_black_first"
                    android:textSize="@dimen/sp_14"
                    tools:text="@string/intro_app_email" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/intro_ll_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/common_gray_bg" />


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="@string/intro_copyright"
        android:textSize="@dimen/sp_11" />
</RelativeLayout>
