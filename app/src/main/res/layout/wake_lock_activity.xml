<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_48"
    android:paddingEnd="@dimen/dp_48">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wake_lock_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/wake_tv_welcome"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wake_lock_tv_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/wake_tv_dep_name"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wake_lock_tv_cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/wake_tv_cashier_name"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <com.ftrend.cleareditview.ClearEditText
            android:id="@+id/wake_lock_edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_cart_edt_bg"
            android:hint="@string/wake_edt_hint"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />


        <Button
            android:id="@+id/wake_lock_btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/login_btn_selector"
            android:letterSpacing="0.2"
            android:text="@string/wake_btn_enter"
            android:textColor="@color/common_white" />
    </LinearLayout>


</RelativeLayout>