<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/cfg_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:padding="@dimen/dp_12">


        <TextView
            android:id="@+id/cfg_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cfg_ll"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="false"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_0"
            android:textColor="@color/text_black_first"
            android:textSize="@dimen/sp_14"
            tools:text="@string/cfg_tv_print" />


        <LinearLayout
            android:id="@+id/cfg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/cfg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/dp_8"
                android:textColor="@color/text_black_first"
                android:textSize="@dimen/sp_14"
                tools:text="2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cfg_tv_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/dp_8"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                tools:text="2"
                tools:visibility="visible" />


            <ImageView
                android:id="@+id/cfg_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:scaleType="centerInside"
                android:src="@drawable/cfg_more" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>