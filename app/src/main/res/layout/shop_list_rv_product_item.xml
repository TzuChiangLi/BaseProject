<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/shop_rv_product_tv_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="@string/shop_rv_title_prodcode" />

    <TextView
        android:id="@+id/shop_rv_product_tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/shop_rv_product_tv_code_title"
        android:text="V1234567890" />

    <TextView
        android:id="@+id/shop_rv_product_tv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_rv_product_tv_code_title"
        android:layout_margin="8dp"
        android:text="商品名称跑步鞋XS-789 42码" />

    <TextView
        android:id="@+id/shop_rv_product_tv_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rv_product_tv_prodname"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/shop_rv_product_tv_num"
        android:text="@string/shop_tv_num" />

    <TextView
        android:id="@+id/shop_rv_product_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rv_product_tv_prodname"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/shop_rv_product_tv_num_unit"
        android:text="480.00" />

    <TextView
        android:id="@+id/shop_rv_product_tv_num_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rv_product_tv_prodname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="双" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_rv_product_tv_prodname"
        android:layout_alignStart="@+id/shop_rv_product_tv_prodname"
        android:layout_alignEnd="@+id/shop_rv_product_tv_num_unit"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_rv_product_tv_per_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/shop_tv_per_price" />

        <TextView
            android:id="@+id/shop_rv_product_tv_per_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="480.00" />

        <TextView
            android:id="@+id/shop_rv_product_tv_discount_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/shop_tv_discount" />

        <TextView
            android:id="@+id/shop_rv_product_tv_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="480.00" />

        <TextView
            android:id="@+id/shop_rv_product_tv_subtotal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="@string/shop_tv_sub_total" />

        <TextView
            android:id="@+id/shop_rv_product_tv_subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="480.00" />
    </LinearLayout>
</RelativeLayout>