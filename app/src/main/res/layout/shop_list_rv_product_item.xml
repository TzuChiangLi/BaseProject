<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_list_rv_product_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/common_white"
    android:padding="8dp">


    <LinearLayout
        android:id="@+id/shop_list_rv_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_list_rv_product_tv_prodcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/shop_rv_title_sn"
            android:textColor="@color/text_black_first"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_prodcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="V1234567890"
            android:textColor="@color/text_black_first"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_barcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/shop_rv_title_sn_line"
            android:textColor="@color/text_black_first"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="V1234567890"
            android:textColor="@color/text_black_first"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/shop_list_rv_product_tv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_list_rv_ll"
        android:layout_alignStart="@+id/shop_list_rv_ll"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/shop_list_rv_product_tv_num_title"
        android:text="商品名称跑步鞋XS-789 42码"
        android:textColor="@color/text_black_first"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_list_rv_product_tv_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_list_rv_product_tv_prodname"
        android:layout_toStartOf="@+id/shop_list_rv_img_minus"
        android:text="@string/shop_tv_num"
        android:textColor="@color/text_black_first"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/shop_list_rv_img_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shop_list_rv_img_add"
        android:layout_alignBottom="@+id/shop_list_rv_product_tv_prodname"
        android:layout_toStartOf="@+id/shop_list_rv_product_tv_num"
        android:background="@null"
        android:src="@drawable/minus" />


    <TextView
        android:id="@+id/shop_list_rv_product_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_list_rv_product_tv_prodname"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/shop_list_rv_img_add"
        android:textColor="@color/text_black_first"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/shop_list_rv_img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shop_list_rv_product_tv_num_unit"
        android:layout_alignBottom="@+id/shop_list_rv_product_tv_prodname"
        android:layout_toStartOf="@+id/shop_list_rv_product_tv_num_unit"
        android:background="@null"
        android:src="@drawable/add" />

    <TextView
        android:id="@+id/shop_list_rv_product_tv_num_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_list_rv_product_tv_prodname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="单位"
        android:textColor="@color/text_black_first"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/shop_list_rv_ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_list_rv_product_tv_prodname"
        android:layout_alignStart="@+id/shop_list_rv_product_tv_prodname"
        android:layout_alignEnd="@+id/shop_list_rv_product_tv_num_unit"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:textSize="16sp">

        <TextView
            android:id="@+id/shop_list_rv_product_tv_per_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/shop_tv_per_price"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_per_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="480.00"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_discount_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/shop_tv_discount"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="0.00"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/shop_tv_sub_total"
            android:textColor="@color/text_black_first" />

        <TextView
            android:id="@+id/shop_list_rv_product_tv_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="480.00"
            android:textColor="@color/text_black_first" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/shop_list_rv_ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_list_rv_ll_info"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shop_btn_price" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shop_btn_discount" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/shop_btn_delete" />


    </LinearLayout>


</RelativeLayout>