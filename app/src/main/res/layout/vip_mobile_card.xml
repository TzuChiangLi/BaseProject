<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vip_mobile_card_shape">


    <TextView
        android:id="@+id/vip_way_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/vip_way_mobile_title"
        android:textColor="@color/text_black_first"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/vip_way_img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vip_way_tv_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />


    <com.ftrend.cleareditview.ClearEditText
        android:id="@+id/vip_way_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_way_tv_title"
        android:layout_alignStart="@+id/vip_way_tv_title"
        android:layout_toStartOf="@+id/vip_mobile_btn_submit"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="none"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />


    <Button
        android:id="@+id/vip_mobile_btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_way_tv_title"
        android:layout_alignTop="@+id/vip_way_edt"
        android:layout_alignBottom="@+id/vip_way_edt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:text="@string/vip_btn_submit" />


    <ImageView
        android:id="@+id/vip_way_img_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/card_nfc_ic"
        android:visibility="gone" />

    <com.ftrend.keyboard.KeyboardView
        android:id="@+id/vip_way_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vip_mobile_btn_submit"
        app:style="0" />
</RelativeLayout>