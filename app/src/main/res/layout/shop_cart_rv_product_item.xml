<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_cart_rv_product_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dialog_bg_white"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/shop_cart_rv_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_rv_product_tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/shop_rv_title_sn"
            android:textColor="@color/text_black_second"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shop_rv_product_tv_prodcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_black_second"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/shop_rv_product_tv_barcode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/shop_rv_title_sn_line"
            android:textColor="@color/text_black_second" />

        <TextView
            android:id="@+id/shop_rv_product_tv_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/shop_rv_product_tv_prodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_cart_rv_ll"
        android:layout_margin="8dp"
        android:textColor="@color/text_black_first"
        android:textSize="16sp"
        android:textStyle="bold" />


    <!--<Button-->
    <!--android:id="@+id/shop_rv_product_btn_add"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignEnd="@+id/shop_rv_product_price"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:maxHeight="25dp"-->
    <!--android:text="@string/shop_tv_buy" />-->


    <TextView
        android:id="@+id/shop_rv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shop_rv_product_tv_prodname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="480.00"
        android:textColor="@color/text_black_first"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>